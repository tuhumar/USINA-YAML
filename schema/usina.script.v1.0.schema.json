{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/usina/usina.script.v1.0.schema.json",
  "title": "USINA-YAML v1.0",
  "type": "object",
  "required": [
    "usina_schema",
    "meta",
    "format",
    "style",
    "audio",
    "variables",
    "prompts",
    "sources",
    "assets",
    "script",
    "timeline",
    "export",
    "qa"
  ],
  "properties": {
    "usina_schema": {
      "const": "usina.script/v1.0"
    },
    "meta": {
      "type": "object",
      "required": [
        "title",
        "episode_id",
        "language",
        "duration_s",
        "created_at",
        "updated_at",
        "authors",
        "license",
        "version"
      ],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "episode_id": {
          "type": "string",
          "minLength": 1
        },
        "language": {
          "type": "string",
          "minLength": 2
        },
        "duration_s": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "created_at": {
          "type": "string"
        },
        "updated_at": {
          "type": "string"
        },
        "authors": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "license": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "format": {
      "type": "object",
      "additionalProperties": true
    },
    "style": {
      "type": "object",
      "additionalProperties": true
    },
    "audio": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "bed": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "asset_id": {
              "type": "string"
            },
            "gain_db": {
              "type": "number"
            },
            "notes": {
              "type": "string"
            }
          }
        }
      }
    },
    "variables": {
      "type": "object",
      "additionalProperties": true
    },
    "prompts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "purpose",
          "kind",
          "input",
          "outputs_expected",
          "constraints"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "purpose": {
            "type": "string"
          },
          "kind": {
            "type": "string"
          },
          "input": {},
          "outputs_expected": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "constraints": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "type"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "publisher": {
            "type": "string"
          },
          "date": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "accessed_at": {
            "type": "string"
          },
          "credibility": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "type",
          "uri",
          "license",
          "credit"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "uri": {
            "type": "string"
          },
          "license": {
            "type": "string"
          },
          "credit": {
            "type": "string"
          },
          "checksum": {
            "type": "string"
          },
          "duration_s": {
            "type": "number"
          },
          "dimensions": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "script": {
      "type": "object",
      "additionalProperties": true
    },
    "timeline": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "start_s",
          "end_s",
          "shots"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "start_s": {
            "type": "number",
            "minimum": 0
          },
          "end_s": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "vo": {},
          "audio_tracks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "asset_id",
                "start_s",
                "end_s"
              ],
              "properties": {
                "asset_id": {
                  "type": "string"
                },
                "start_s": {
                  "type": "number",
                  "minimum": 0
                },
                "end_s": {
                  "type": "number",
                  "exclusiveMinimum": 0
                },
                "gain_db": {
                  "type": "number"
                },
                "role": {
                  "type": "string"
                },
                "fade_in_s": {
                  "type": "number",
                  "minimum": 0
                },
                "fade_out_s": {
                  "type": "number",
                  "minimum": 0
                },
                "notes": {
                  "type": "string"
                }
              },
              "additionalProperties": true
            }
          },
          "shots": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "type",
                "duration_s"
              ],
              "properties": {
                "type": {
                  "type": "string"
                },
                "duration_s": {
                  "type": "number",
                  "exclusiveMinimum": 0
                },
                "asset_id": {
                  "type": "string"
                },
                "generator": {
                  "type": "object"
                },
                "notes": {
                  "type": "string"
                },
                "overlays": {
                  "type": "array"
                },
                "transitions": {
                  "type": "object"
                }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    },
    "export": {
      "type": "object",
      "additionalProperties": true
    },
    "qa": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
